{
  "compilerOptions": {
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "typings/**/*",
    "config/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "webpack",
  ]
}
